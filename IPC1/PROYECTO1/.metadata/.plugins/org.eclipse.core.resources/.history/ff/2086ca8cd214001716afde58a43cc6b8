package tareanodos;

public class Lista {
	
	private Nodo inicio;
	private int cantidad;
	private int tamaño;
	public void Lista(){
		inicio=null;
		tamaño=0;
	}
	
	//Verificar si esta vacia la lista
	 
	public boolean Vacia(){
		return inicio==null;
	}
	
	//Obtener tamaño
	public int getTamaño(){
		return tamaño;
	}
	
	//Cambiar Tamaño
	public void setTamaño(int tamaño){
		this.tamaño=tamaño+1;
	}
	
	//Agregar Nodo
	public void AgregarNodo(int valor){
		Nodo nodo= new Nodo();
		nodo.setCantidad(valor);
		if(getTamaño()==0){
			nodo.setSiguiente(inicio);
			inicio=nodo;
		}
		setTamaño(getTamaño());
	}
	
	//Obtener el datos del Nodo
	public void getDatos(){
		if(getTamaño()>0){
			Nodo aux= inicio;
			System.out.println(getTamaño());
			int i=0;
			
		}
	}
	

}
